{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "target": "ES2020",
    "types": ["node", "jest"],
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
